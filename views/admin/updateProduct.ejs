  <div class="d-flex justify-content-center" >
    <section>
      <div class="container mt-4">
        <div class="row">

          <div class="col-12">
            

            <div class="text-end">
              <a href="/admin/addNewImage?id=<%=productData._id%>"> <button class="btn btn-outline-light mt-4" >Add New Image</button></a>
              <a href="/admin/product"><input type="submit" value="Back" class="btn btn-outline-light mt-4"></a>
            </div>

            <form action="/admin/updateProduct" method="post" enctype="multipart/form-data" class="text-white">
              <input type="hidden" name="id" value="<%= productData._id %>">
              <!-- enctype="multipart/form-data"  -->
              
              <label for="" class="mt-3">Name</label>
              <input type="text"  name="name" placeholder="Enter Name"  value="<%=productData.name %>"
                class="form-control" style="background-color: rgb(248, 252, 252);" required >
             

              <label for="" class="mt-4">Description</label>
              <input type="text" name="description" placeholder="Enter Description"
                value="<%=productData.description %>" class="form-control" style="background-color: rgb(248, 252, 252);"  required>

              <label for="" class="mt-4">Price</label>
              <input type="text" name="price" placeholder="Enter Price" value="<%=productData.price %>"
                class="form-control" style="background-color: rgb(248, 252, 252);"  required>

              <label for="" class="mt-4">Select Category</label>
              <select name="" id="" class="form-control ">
                <option value="" required>Select Category</option>

                <!-- category -->
                <% for(let res of local){ %>
                  <option>
                    <%= res.name %>
                  </option>
                  <% } %>
              </select>

              <label for="" class="mt-4">Stock</label>
              <input type="text" name="stock" placeholder="Enter Stock" value="<%=productData.stock %>"
                class="form-control" style="background-color: rgb(248, 252, 252);"  required>
              <!-- ---------image Section -->

              <%for(let i=0;i< productData.image.length;i++) {%>
                <img id="image-preview[i]" src="/productimages/<%= productData.image[i] %>" width="100px" height="100px"
                  class=" mt-3">
                <br>
                <label for="" class="mt-4">Image</label>
                <br>

                
                  <div id="preview-container-<%=i%>" class="preview-container"></div>
                 
                
                <input type="file" onchange="previewImage(event,'<%=i%>')" name="image"
                  value="<%= productData.image[i] %>" class="form-control" multiple required>
                <!-- ----------------------- -->
                <script>
                  function previewImage(event, i) {
                    const input = event.target;
                    const reader = new FileReader();
                    reader.onload = () => {
                      const img = document.createElement('img');
                      img.src = reader.result;
                      const previewContainer = document.getElementById(`preview-container-${i}`);
                      previewContainer.innerHTML = '';
                      previewContainer.appendChild(img);
                    };
                    reader.readAsDataURL(input.files[0]);
                  }
                </script>
                <!-- --------------------- -->
                <%}%>


                  <div class="d-flex justify-content-center">
                    <input type="submit" value="Submit" class="btn btn-success mt-4">
                  </div>

            </form>
          </div>
        </div>
