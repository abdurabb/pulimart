
<%- include('../layouts/adminHeader.ejs') -%>

<div class="d-flex justify-content-center" >
  <section>
    <div class="container mt-4">
      <div class="row">

        <div class="col-12">
          <h2 class="text-center text-dark">Update Coupoun</h2>

          <div class="text-end">
            <a href="/admin/coupounManagement"><input type="submit" value="Back" class="btn btn-outline-dark mt-4"></a> 
            </div>
            
          <form action="/admin/updateCoupoun" method="post"  class="text-white">
            <input type="hidden" name="id" value="<%= coupoun._id %>">
          
            <label for="" class="mt-3 text-dark">Coupoun Code</label>
            <input type="text"name="code" value="<%=coupoun.code%>" class="form-control "  required>

            <label for="" class="mt-4 text-dark">Discount Type</label>
            <select name="discountType" id=""  class="form-control ">
              <option value="">Select Discount Type</option>
              <option value="percentage">percentage</option>
              <option value="flat">flat</option>
              
            </select>

            <label for="" class="mt-4 text-dark">Discount Amount</label>
            <input type="text"name="discount" value="<%=coupoun.discountAmount%>" class="form-control mt-4"  required>

            <label for="" class="mt-4 text-dark">Max Discount Amount</label>
            <input type="text"name="maxdiscount" value="<%=coupoun.maxDiscountAmount%>" class="form-control mt-4"  required>

            <label for="" class="mt-4 text-dark">Min Purchase</label>
            <input type="text"name="minPurchase" value="<%=coupoun.minPurchase%>" class="form-control mt-4" placeholder="Min Purchase" required>

            <label for="" class="mt-4 text-dark">Created Date</label>
            <input type="text"name="createDate" value="<%=coupoun.createDate%>" class="form-control mt-4" placeholder="Starting Date" required>
            
            <label for="" class="mt-4 text-dark">Expiry Date</label>
            <input type="datetime-local"name="expiryDate" value="<%=coupoun.expiryDate%>" class="form-control mt-4" placeholder="expiry Date" required>

           

            
   
            <div class="d-flex justify-content-center">
            <input type="submit" value="Submit" class="btn btn-success mt-4">
          </div>

          </form>
        </div>
      </div>
    </div>
  </section>
  </div>
  
  
  <%- include('../layouts/adminFooter.ejs') -%>