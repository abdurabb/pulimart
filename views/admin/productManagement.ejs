<!DOCTYPE html> 
<html lang="en">
<!-- <meta charset="utf-8"> -->
<title> Pulimart</title>
<meta content="width=device-width, initial-scale=1.0" name="viewport">
<meta content="" name="keywords">
<meta content="" name="description">

<!-- Favicon -->
<link href="/landsheetImages/logo.png" rel="icon">


<!-- Google Web Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Roboto:wght@500;700&display=swap"
    rel="stylesheet">

<!-- Icon Font Stylesheet -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

<!-- Libraries Stylesheet -->
<link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet"> 
<link href="lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" /> 

<!-- Customized Bootstrap Stylesheet -->
<link href="/adminHome/css/bootstrap.min.css" rel="stylesheet">

<!-- Template Stylesheet -->
<link href="/adminHome/css/style.css" rel="stylesheet">

<!-- adding datatable style sheet css page -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.3/css/jquery.dataTables.min.css">


</head>

<body>
    <div class="container-fluid position-relative d-flex p-0">
        <!-- Spinner Start -->
        <!-- <div id="spinner"
            class="show bg-dark position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div> -->
        <!-- Spinner End -->


        <!-- Sidebar Start -->
        <div class="sidebar pe-4 pb-3">
            <nav class="navbar bg-secondary navbar-dark">
                <div class="navbar-brand mx-4 mb-3">
                    <h3 class="text-primary"><i class="fa fa-user-edit me-2"></i>Pulimart</h3>
                </div>
                <div class="d-flex align-items-center ms-4 mb-4">
                    <div class="position-relative">
                        <img class="rounded-circle" src="/landsheetImages/logo.png" alt=""
                            style="width: 40px; height: 40px;">
                    </div>
                </div>
                <div class="navbar-nav w-100">
                    <a href="/admin/home" class="nav-item nav-link "><i
                            class="fa fa-tachometer-alt me-2"></i>Dashboard</a>
                    <a href="/admin/userManagement" class="nav-item nav-link"><i class="fa fa-th me-2"></i>User</a>
                    <a href="#" class="nav-item nav-link active"><i class="fa fa-keyboard me-2"></i>Product</a>
                    <a href="/admin/category" class="nav-item nav-link"><i class="fa fa-table me-2"></i>Category</a>
                    <a href="/admin/orderManagement" class="nav-item nav-link "><i
                            class="fa fa-table me-2"></i>Order</a>

                    <a href="/admin/coupounManagement" class="nav-item nav-link "><i
                            class="fa fa-table me-2"></i>Coupon</a>
                    <a href="/admin/logout" class="nav-item nav-link"><i class="fa fa-chart-bar me-2"></i>Logout</a>
                </div>
            </nav>
        </div>
        <!-- Sidebar End -->


        <!-- Content Start -->
        <div class="content">
            <!-- Navbar Start -->
            <header>
                <nav class="navbar navbar-expand bg-secondary navbar-dark sticky-top px-4 py-0">
                    <div class="mt-4 pb-2">
                        <a href="#" class="sidebar-toggler flex-shrink-0">
                            <i class="fa fa-bars"></i>
                        </a>
                    </div>
                    
                    <div class="">
                        <h3 class=" text-primary " >Product Details</h3>
                    </div>
                </nav>
                
            </header>
            <!-- Navbar End -->

            <div class="container-fluid pt-2 px-4">
                <div class="bg-secondary text-center rounded ">
                    
                    <div class="mt-5  pt-4  ">
                        <a href="/admin/addProdect"><button class="btn btn-outline-success">Add prodect</button></a>
                    </div>
                    <div class="table-responsive ">
                        <table id="tablePagination"
                            class="display  text-white table text-start align-middle table-bordered table-hover mb-0">
                            <thead>
                                <tr class="text-white">

                                    <th scope="col" class="text-center bg-dark">Sl No.</th>
                                    <th scope="col" class="text-center bg-dark">Name</th>
                                    <th scope="col" class="text-center bg-dark">Image</th>
                                    <th scope="col" class="text-center bg-dark">Description</th>
                                    <th scope="col" class="text-center bg-dark">Category</th>
                                    <th scope="col" class="text-center bg-dark">Stock</th>
                                    <th scope="col" class="text-center bg-dark">Price</th>
                                    <th scope="col" class="text-center bg-dark">Update</th>
                                    <th scope="col" class="text-center bg-dark">Delete</th>
                                </tr>
                            </thead>

                            <tbody>
                                <% for(let [index, res] of product.entries()){ %>
                                    <tr>
                                        <td class="text-center text-white">
                                            <%= index+1 %>
                                        </td>
                                        <td class="text-center text-white">
                                            <%= res.name %>
                                        </td>
                                        <td class="text-center "><img src="/productimages/<%=res.image[0]%>" alt="NO"
                                                height="50" width="50"></td>
                                        <td class="text-center">
                                            <%= res.description %>
                                        </td>
                                        <td class="text-center">
                                            <%= res.category.name%>
                                        </td>
                                        <td class="text-center">
                                            <%= res.stock %>
                                        </td>
                                        <td class="text-center">
                                            <%= res.price %>
                                        </td>
                                        <td><a href="/admin/updateProduct?id=<%=res._id%>"><button
                                                    class="btn btn-outline-success">Update</button></a></td>
                                        <td><a href="/admin/deleteProduct?id=<%=res._id%>"><button
                                                    class="btn btn-outline-primary"
                                                    onclick="return confirm('Are you sure you want to delete this Product?')">Delete</button></a>
                                        </td>
                                    </tr>
                                    <%} %>
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="lib/chart/chart.min.js"></script>
    <script src="lib/easing/easing.min.js"></script>
    <script src="lib/waypoints/waypoints.min.js"></script>
    <script src="lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="lib/tempusdominus/js/moment.min.js"></script>
    <script src="lib/tempusdominus/js/moment-timezone.min.js"></script>
    !--
    <script src="lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="/adminHome/js/main.js"></script>



    <!-- Adding datatable cdn -->
    <script src="https://cdn.datatables.net/1.13.3/js/jquery.dataTables.min.js"></script>

    <!-- initalizing datatable -->

    <!-- adding j query pagnation link -->
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.13.2/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" charset="utf8"
        src="https://cdn.datatables.net/1.13.2/js/jquery.dataTables.js"></script>



</body>

</html>


<script>
    $(document).ready(function () {
        $('#tablePagination').DataTable();
    });
</script>