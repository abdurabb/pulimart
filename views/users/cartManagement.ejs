          </div>
          <!-- Item-->
          <%if(cart){%>
            <%if(cartProducts.length>0){%>
              <% for(let i=0;i<cartProducts.length;i++){ %>
                <div class="d-sm-flex justify-content-between align-items-center my-2 pb-3 border mt-5">
                  <div class="d-block d-sm-flex align-items-center text-center text-sm-start"><a
                      class="d-inline-block flex-shrink-0 mx-auto me-sm-4" href="shop-single-v1.html"><img
                        src="/productimages/<%=products[i].image[0]%>" width="100" height="30px" alt="Product"></a>
                    <div class="pt-2">
                      <h3 class="product-title fs-base mb-2"><a href="shop-single-v1.html">
                          <%=products[i].name%>
                        </a></h3>
                      <div class="fs-lg text-accent pt-2">₹<small>
                          <%=products[i].price%>
                        </small></div>
                    </div>
                  </div>



                  <div class=" mx-auto mx-sm-0 text-center text-sm-start" style="max-width: 9rem;">
                    <label class="form-label" for="quantity1">Quantity</label>


                    <!-- ------------------- -->
                    <button class="rounded-3 btn-outline-danger cart-item-count mr-3 "
                      onclick="changeQuantity('<%=cart._id%>','<%=products[i]._id%>',-1)">-</button>
                    <span id="<%=products[i]._id%>">
                      <%=cartProducts[i].quantity%>
                    </span><button class=" rounded-3 btn-outline-success cart-item-count pl-5 ml-5"
                      onclick="changeQuantity('<%=cart._id%>','<%=products[i]._id%>',1)">+</button>
                    <!-- ------------ -->



                    <a href="/removeCartItem?id=<%=products[i]._id%>"><button class="btn btn-outline-danger mt-3"
                        type="button">Remove</button></a>
                  </div>
                </div>
                <%}%>
                  <%} else {%>
                    <div class="text-center mt-5">
                      <h1 class="text-danger"> Your Cart is Empty</h1>
                      <a href="/shope"><button class="btn btn-outline-success">Continue Shopping</button></a>
                    </div>
                    <%}%>
                      <%}%>
                        <div>

                        </div>
                        <!-- item -->
        </section>
        <!-- Sidebar-->
