<%- include('../layouts/header.ejs')%>

<section >
 
    <div class="container mt-4 ">
      <div class="row">
  
        <div class="col-md-6">
          <h2 class="text-center">Update Address</h2>
          <div class="text-end">
            <a href="/manageAddress"><input type="submit" value="Back" class="btn btn-outline-dark mt-4"></a> 
         </div>
          <form action="/updateAddress" method="post" >
            
            <!-- enctype="multipart/form-data"  -->
  
            <label for="" class="mt-3">Name</label>
            <input type="text" name="name"  value="<%= value.name%>" class="form-control" required>
  
            <label for="" class="mt-4">Address</label>
            <input type="text"name="address" value="<%=value.address%>" class="form-control" required>

            <label for="" class="mt-3">PostCode</label>
            <input type="text" name="postcode"  value="<%=value.postcode%>" class="form-control" required>

            <label for="" class="mt-3">City/District/Town</label>
            <input type="text" name="city"  value="<%=value.city%>" class="form-control" required>

            <label for="" class="mt-3">State</label>
            <input type="text" name="state"  value="<%=value.state%>" class="form-control" required>

            <label for="" class="mt-3">Country</label>
            <input type="text" name="country"  value="<%=value.country%>" class="form-control" required>

            <label for="" class="mt-3">Mobile Number</label>
            <input type="text" name="mobile"  value="<%=value.mobile%>" class="form-control" required>

            <input type="hidden" name="_id" class="form-control" value="<%=value._id%>">
            <input type="submit" value="Update Address" class="btn btn-success mt-4">
  
          </form>
        </div>
      </div>
    </div>

  
  </section>

  <%- include('../layouts/footer.ejs')%>